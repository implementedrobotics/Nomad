struct com_state_t
{
    int64_t timestamp;
    int64_t sequence_num;

    double orientation[4];        // Body Orientation Quaternion (Body Coordinates)
    double pos_world[3];      // Body Position XYZ (World Coordinates)
    double omega_body[3];    // Body Rotational Velocity (Body Coordinates)
    double vel_world[3];      // Body Velocity XYZ (World Coordinates)
}
