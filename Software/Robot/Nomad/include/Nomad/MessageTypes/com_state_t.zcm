struct com_state_t
{
    int64_t timestamp;
    int64_t sequence_num;

    double orientation[4];        // Body Orientation Quaternion (Body Coordinates)
    double theta[3];    // Body Orientation Roll Pitch Yaw (Body Coordinates)
    double pos[3];      // Body Position XYZ (World Coordinates)
    double omega[3];    // Body Rotational Velocity (Body Coordinates)
    double vel[3];      // Body Velocity XYZ (World Coordinates)
}
